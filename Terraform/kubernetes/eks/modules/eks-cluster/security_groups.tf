resource "aws_security_group" "cluster_eks" {
  name = "${var.environment}-cluster"
  description = "Cluster communication with workers nodes"
  vpc_id = "${var.vpc_id}"

  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "-1"
    cidr_blocks = ["0.0.0.0/0"]
  }

  ingress {
    from_port   = 443
    to_port     = 443
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"] # Could be better :)
  }
}
